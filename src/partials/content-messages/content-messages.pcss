.content-messages {
  display: flex;
  flex: 1;
  flex-direction: column;
  gap: 10px;
  justify-content: flex-end;

  padding: 18px 21px;

  &__is-date {
    align-self: center;

    margin-bottom: 30px;
    padding: 2px 23px;

    background-color: #F1F2F4;
    border-radius: 27px;

    span {
      font-size: 10px;
      font-weight: 500;
      color: #B3B5BB;
    }
  }
}



