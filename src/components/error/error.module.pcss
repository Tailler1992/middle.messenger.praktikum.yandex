.error{
  display: flex;
  flex-direction: column;
  align-items: center;

  h1 {
    margin-bottom: 15px;
    font-size: 48px;
    font-weight: 500;
    line-height: 40px;
    color: var( --text-color-secondary);
  }
}

.message {
  margin-bottom: 75px;
  font-size: 20px;
  line-height: 20px;
  color: var( --text-color-secondary);
}

a {
  font-size: 11px;
  font-weight: 500;
  line-height: 11px;
  cursor: pointer;

  &:hover {
    text-decoration: underline;
  }
}
