.item {
  display: flex;
  align-items: center;
  justify-content: space-between;

  span {
    margin-left: 5px;
    font-size: 12px;
    font-weight: 400;
    color: var(--text-color-secondary);
  }

  button {
    padding: 0;
    font-size: 11px;
    font-weight: 500;
    color: var(--text-color);
    background: none;

    &:hover, &:focus {
      text-decoration: underline;
      background: none;
    }
  }
}
