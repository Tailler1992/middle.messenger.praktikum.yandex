.container {
  display: flex;
  column-gap: 20px;
  height: 100%;
  min-height: 100%;
  padding: 20px 20px 0;
  background: var(--bg-color);
}

.popup {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  background: rgb(0 0 0 / 40%);
}
